<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="viewModel"
            type="com.denis.mypocket.viewmodel.AddTransactionViewModel"/>
    </data>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:orientation="vertical"
                 android:layout_width="match_parent"
                  android:transitionName="reveal"
                 android:layout_height="match_parent">

        <include android:id="@+id/toolbarAddTrans" layout="@layout/toolbar"/>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/half_padding"
            app:cardCornerRadius="@dimen/custom_padding_4dp"
            app:cardElevation="@dimen/custom_padding_4dp"
            >
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/half_padding">


                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="@dimen/half_padding"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/vector_transactions"/>
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@{viewModel.amount}"
                        android:hint="Enter the amount"
                        android:inputType="numberDecimal"
                        android:onTextChanged="@{viewModel.onTextChanged}"
                        />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="@dimen/half_padding"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/vector_wallet"/>
                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/spinner"
                        android:spinnerMode="dropdown"/>
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="@dimen/half_padding"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/vector_categories"/>

                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/spinner2"
                        android:spinnerMode="dropdown"/>
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="@dimen/half_padding"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/vector_calendar"/>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Today"
                        android:enabled="false"
                        />
                </LinearLayout>



                <android.support.design.widget.FloatingActionButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/addTrans"
                    android:src="@drawable/vector_check"
                    android:transitionName="reveal"
                    app:backgroundTint="@color/fab_income"
                    android:layout_gravity="right"/>

            </LinearLayout>
        </android.support.v7.widget.CardView>


    </LinearLayout>
</layout>


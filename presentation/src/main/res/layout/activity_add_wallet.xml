<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="viewModel"
            type="com.denis.mypocket.viewmodel.adding.AddWalletViewModel"/>
    </data>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:orientation="vertical"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent">

        <include android:id="@+id/addWalletToolbar"
                 layout="@layout/toolbar"/>

        <com.denis.mypocket.view.FixedTextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.design.widget.TextInputEditText
                android:id="@+id/walletNameEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/wallet_hint"
                android:text="@{viewModel.walletName}"
                android:afterTextChanged="@{viewModel.setWalletName}"/>
        </com.denis.mypocket.view.FixedTextInputLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OK"
            android:id="@+id/addWalletBt"
            android:onClick="@{viewModel.addWallet}"
            android:layout_gravity="center_horizontal"/>
    </LinearLayout>
</layout>
